<% @review.errors.each do |error| %>
  <p class="alert alert-danger"><%= error.full_message %></p>
<% end %>
<h3>Edit your review</h3><br>
<div class="container">
<%= form_with(model: [@movie,@review]) do |form| %>
  <div class="field">
    <%= form.label :rating ,class:'h5'%>
    <%=form.radio_button :rating,1 %> 1⭐
    <%=form.radio_button :rating,2 %> 2⭐
    <%=form.radio_button :rating,3 %> 3⭐
    <%=form.radio_button :rating,4 %> 4⭐
    <%=form.radio_button :rating,5 %> 5⭐
  </div><br>

  <div class="field">
    <%= form.label :comment ,class:'h5'%>
    <%= form.text_area :comment %>
  </div><br>

  <div class="actions">
    <%= form.submit class:"btn btn-sm btn-success"%>
  </div><br>
<% end %>

<%= button_to 'Back',movie_reviews_path(@movie),method: :get ,class:"btn btn-sm btn-dark"%>
</div>