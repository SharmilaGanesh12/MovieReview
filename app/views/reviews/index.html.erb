<h3>Reviews of <%= @movie.name %> </h3><br>


<div class="container">
    <% @reviews.each do |review| %>
      <div class="col">
        <div class="card">
            <div  class="card-body">
              <h5 class="card-title"><%= review.comment %></h5><small class="card-subtitle mb-2 text-muted"><%= review.user.email%></small><br><br>
              <h6>Rating: <%= review.rating %>‚≠ê</h6>

              <% if can? :edit, review %>
                <%= button_to "Edit Review", edit_movie_review_path(@movie,review) ,method: :get,class:"btn btn-sm btn-primary"%>
              <% end %><br>
          </div>
        </div>
      </div>
    <% end %><br>
    <%= button_to 'Back',movies_path,method: :get ,class:"btn btn-sm btn-dark"%>
    <br>
</div>
<div class="pagination justify-content-center">
  <%= pagy_bootstrap_nav(@pagy).html_safe %>
</div>