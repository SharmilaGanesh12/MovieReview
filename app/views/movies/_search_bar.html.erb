<div class="container">
  <%= form_tag movies_path, method: :get do %>
    <p>
      <%= label_tag :movie_name, "Movie Name:",class:"h6" %>
      <%= text_field_tag :search, params[:search], placeholder: "Search by Name" %>
      <%= label_tag :from_date, "From Date:",class:"h6" %>
      <%= date_field_tag :from_date, class: "form-control" %>
      <%= label_tag :to_date, "To Date:",class:"h6" %>
      <%= date_field_tag :to_date, class: "form-control" %>
      <button type="submit" class="btn btn-primary">
        <i class="fa-solid fa-magnifying-glass fa-spin"></i>
      </button>
    </p>
  <% end %>
</div>