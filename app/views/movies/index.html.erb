<%= render 'search_bar' %><br>
<div class="container">
  <div class="row row-cols-2 gy-5 ">
    <% @movies.each do |movie| %>
      <div class="col-6">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= movie.name %></h4>
            <h6 class="card-subtitle mb-2 text-muted"> <%= movie.release_date %></h6><br>
            <% if movie.average_rating>0%>
              <h6>‚≠ê <%= movie.average_rating %><small>/5</small></h6><br><br>
            <% else %>
              <h6>No ratings yet</h6><br><br>
            <% end %>
            <%= link_to 'Add review',new_movie_review_path(movie),class: 'btn btn-success btn-sm' %>
            <% if movie.average_rating > 0 %>
              <%= link_to 'View reviews',movie_reviews_path(movie),class: 'btn btn-sm btn-info'%>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div><br>

<div class="pagination justify-content-center">
  <%= pagy_bootstrap_nav(@pagy).html_safe %>
</div>
